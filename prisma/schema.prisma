// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Users table for authentication
model User {
  id             String   @id @default(cuid())
  email          String   @unique
  name           String
  password       String?
  role           String   @default("user")
  organizationId String   @map("organization_id")
  version        Int      @default(1)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  ownedDeals Deal[]
  activities Activity[]

  // Indexes for performance
  @@index([organizationId])
  @@index([email, organizationId])
  @@map("users")
}

// Companies table
model Company {
  id             String   @id @default(cuid())
  name           String
  domain         String?
  industry       String?
  size           String?
  phone          String?
  address        String?
  organizationId String   @map("organization_id")
  version        Int      @default(1)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  contacts Contact[]
  deals    Deal[]

  // Indexes for performance
  @@index([organizationId])
  @@index([name, organizationId])
  @@index([domain, organizationId])
  @@index([createdAt])
  @@map("companies")
}

// Contacts table
model Contact {
  id             String   @id @default(cuid())
  firstName      String   @map("first_name")
  lastName       String   @map("last_name")
  email          String   @unique
  phone          String?
  jobTitle       String?  @map("job_title")
  companyId      String?  @map("company_id")
  organizationId String   @map("organization_id")
  version        Int      @default(1)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  company    Company?   @relation(fields: [companyId], references: [id])
  deals      Deal[]
  activities Activity[]

  // Indexes for performance
  @@index([organizationId])
  @@index([email, organizationId])
  @@index([firstName, lastName, organizationId])
  @@index([companyId])
  @@index([createdAt])
  @@map("contacts")
}

// Deals table
model Deal {
  id                String    @id @default(cuid())
  title             String
  amount            Decimal?  @db.Decimal(12, 2)
  stage             String    @default("lead")
  probability       Int       @default(0)
  expectedCloseDate DateTime? @map("expected_close_date") @db.Date
  contactId         String?   @map("contact_id")
  companyId         String?   @map("company_id")
  ownerId           String    @map("owner_id")
  organizationId    String    @map("organization_id")
  version           Int       @default(1)
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  // Relations
  contact    Contact?   @relation(fields: [contactId], references: [id])
  company    Company?   @relation(fields: [companyId], references: [id])
  owner      User       @relation(fields: [ownerId], references: [id])
  activities Activity[]

  // Indexes for performance
  @@index([organizationId])
  @@index([stage, organizationId])
  @@index([ownerId, organizationId])
  @@index([contactId])
  @@index([companyId])
  @@index([amount])
  @@index([createdAt])
  @@index([updatedAt])
  @@index([expectedCloseDate])
  @@map("deals")
}

// Activities table
model Activity {
  id             String    @id @default(cuid())
  type           String
  subject        String
  description    String?
  dueDate        DateTime? @map("due_date")
  completed      Boolean   @default(false)
  contactId      String?   @map("contact_id")
  dealId         String?   @map("deal_id")
  userId         String    @map("user_id")
  organizationId String    @map("organization_id")
  version        Int       @default(1)
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // Relations
  contact Contact? @relation(fields: [contactId], references: [id])
  deal    Deal?    @relation(fields: [dealId], references: [id])
  user    User     @relation(fields: [userId], references: [id])

  // Indexes for performance
  @@index([organizationId])
  @@index([type, organizationId])
  @@index([completed, organizationId])
  @@index([dueDate, completed])
  @@index([contactId])
  @@index([dealId])
  @@index([userId])
  @@index([createdAt])
  @@map("activities")
}
